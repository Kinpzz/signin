extends layout



block content
  div.reg-body
    div.user-image
        img(src='images/user.jpg', alt='user image')

    div.info-header 用户登陆

    div.reg-form
      form(action='/signin', method='post')
        div.group-input
          div.input-wrapper
            if user
              input#user-name(type='text', name='username', placeholder='用户名', value=user.username)
            else
              input#user-name(type='text', name='username', placeholder='用户名')

            if error
              label.error #{error}

          div.input-wrapper
            if user
              input#password(type='password', name='password', placeholder='密码', value='#{user.password}')
            else
              input#password(type='password', name='password', placeholder='密码')

        div.input-button
            input#reset-info.button(type='button', value='重置')

            input#login.button(type='button', value='登陆')

      div.to-signup 没有账号？
        span
          a(href='/signup') 点此注册

  script(type="text/javascript" src="javascripts/register.js")